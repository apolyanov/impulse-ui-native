{
  "name": "@impulse-ui-native/toolkit",
  "version": "1.0.10",
  "source": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "react-native": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./src/index.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "pnpm exec eslint . --fix"
  },
  "dependencies": {
    "@impulse-ui-native/button": "workspace:*",
    "@impulse-ui-native/core": "workspace:*",
    "@impulse-ui-native/echo": "workspace:*",
    "@impulse-ui-native/flyout": "workspace:*",
    "@impulse-ui-native/icon": "workspace:*",
    "@impulse-ui-native/input": "workspace:*",
    "@impulse-ui-native/layer-manager": "workspace:*",
    "@impulse-ui-native/safe-area-view": "workspace:*",
    "@impulse-ui-native/tag": "workspace:*",
    "@impulse-ui-native/theme": "workspace:*",
    "@impulse-ui-native/view": "workspace:*",
    "@impulse-ui-native/typography": "workspace:*"
  },
  "devDependencies": {
    "@impulse-ui-native/layer-manager-types": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-native": ">=0.74",
    "expo": ">=51 || >=52",
    "expo-modules-core": ">=1.0.0",
    "react-native-gesture-handler": ">=2",
    "react-native-reanimated": ">=3"
  },
  "publishConfig": {
    "access": "public"
  }
}
